    "bupnp": "github:raptoracle/bupnp",
    "bval": "github:raptoracle/bval",
    "bweb": "github:raptoracle/bweb",
    "loady": "github:raptoracle/loady",
    "lodash": "^4.17.21",
    "n64": "github:raptoracle/n64",
    "nan": "^2.19.0",
    "node-multi-hashing": "github:raptoracle/node-multi-hashing",
    "uint256": "github:raptoracle/uint256"
  },
  "bundleDependencies": [
    "bcfg",
    "bcrypto",
    "bcurl",
    "bdb",
    "bdns",
    "bevent",
    "bfile",
    "bfilter",
    "bheep",
    "binet",
    "blgr",
    "blru",
    "blst",
